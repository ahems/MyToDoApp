{
  "data-source": {
    "database-type": "mssql",
    "connection-string": "@env('DATABASE_CONNECTION_STRING')"
  },
  "runtime": {
    "rest": {
      "enabled": true,
      "path": "/api"
    },
    "graphql": {
      "enabled": true,
      "path": "/graphql"
    },
    "host": {
      "cors": {
        "origins": [],
        "allow-credentials": false
      },
      "authentication": {
        "provider": "AzureAD",
        "jwt": {
          "audience": "@env('API_APP_ID_URI')",
          "issuer": "https://login.microsoftonline.com/@env('TENANT_ID')/v2.0"
        }
      }
    },
    "telemetry": {
      "application-insights": {
        "enabled": true,
        "connection-string": "@env('APPLICATIONINSIGHTS_CONNECTION_STRING')"
      }
    }
  },
  "entities": {
    "todo": {
      "source": "dbo.ToDo",
      "permissions": [
        {
          "role": "authenticated",
          "actions": ["*"]
        }
      ]
    }
  }
}